{
    "name": "harmonylang",
    "displayName": "HarmonyLang",
    "description": "VS Code language support for Harmony, a Python-like concurrent programming language.",
    "icon": "images/harmonylang.png",
    "version": "0.2.0",
    "publisher": "kevinsun-dev-cornell",
    "repository": "https://github.com/kevinsun-dev/harmonylang",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "CS 4410",
        "Harmony",
        "Syntax",
        "Language"
    ],
    "author": {
        "email": "contact@kevinsun.dev",
        "name": "Kevin Sun"
    },
    "license": "MIT",
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "HarmonyLang",
            "properties": {
                "harmonylang.pythonPath": {
                    "type": "string",
                    "scope": "machine-overridable",
                    "default": "python3",
                    "description": "Python 3 installation path"
                },
                "harmonylang.ccPath": {
                    "type": "string",
                    "scope": "machine-overridable",
                    "default": "cc",
                    "description": "C Compiler installation path"
                }
            }
        },
        "languages": [{
            "id": "harmony",
            "aliases": [
                "Harmony",
                "harmony"
            ],
            "extensions": [
                ".hny"
            ],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "harmony",
            "scopeName": "source.harmony",
            "path": "./syntaxes/harmony.tmLanguage.json"
        }],
        "commands": [{
                "command": "harmonylang.run",
                "title": "Run Harmony"
            },
            {
                "command": "harmonylang.end",
                "title": "End All Harmony Processes"
            },
            {
                "command": "harmonylang.install",
                "title": "Add `harmony` to PATH"
            },
            {
                "command": "harmonylang.uninstall​​",
                "title": "Remove `harmony` CLI"
            }
        ],
        "keybindings": [{
                "command": "harmonylang.run",
                "key": "alt+shift+n"
            },
            {
                "command": "harmonylang.end",
                "key": "alt+shift+q"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./",
        "clean": "rm -rf out",
        "update-harmony": "./update_harmony.sh",
        "test": "mocha -r ts-node/register tests/**/*.test.ts"
    },
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/command-exists": "^1.2.0",
        "@types/create-html-element": "^2.1.0",
        "@types/lodash": "^4.14.168",
        "@types/mocha": "^8.2.0",
        "@types/node": "^12.19.11",
        "@types/rimraf": "^3.0.0",
        "@types/typescript": "^2.0.0",
        "@types/vscode": "^1.34.0",
        "@typescript-eslint/eslint-plugin": "^3.0.2",
        "@typescript-eslint/parser": "^3.0.2",
        "axios": "^0.21.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.1.0",
        "ts-node": "^9.1.1",
        "typescript": "^3.9.7"
    },
    "dependencies": {
        "chai": "^4.2.0",
        "command-exists": "^1.2.9",
        "create-html-element": "^3.0.0",
        "lodash": "^4.17.20",
        "mocha": "^8.2.1",
        "node": "^15.4.0",
        "node-html-parser": "^2.0.0",
        "rimraf": "^3.0.2"
    }
}