{
    "name": "harmonylang",
    "displayName": "HarmonyLang",
    "description": "VS Code language support for Harmony, a Python-like concurrent programming language.",
    "icon": "images/harmonylang.png",
    "version": "1.1.0",
    "publisher": "kevinsun-dev-cornell",
    "repository": "https://github.com/kevinsun-dev/harmonylang",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "CS 4410",
        "Harmony",
        "Syntax",
        "Language"
    ],
    "author": {
        "email": "contact@kevinsun.dev",
        "name": "Kevin Sun"
    },
    "license": "MIT",
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "capabilities": {
        "hoverProvider" : "true"
    },
    "contributes": {
        "configuration": {
            "title": "HarmonyLang",
            "properties": {
                "harmonylang.pythonPath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "scope": "machine-overridable",
                    "default": null,
                    "description": "Python 3 installation path"
                },
                "harmonylang.commandPath": {
                    "type": ["string", "null"],
                    "scope": "machine-overridable",
                    "default": null,
                    "description": "Path of the Harmony command"
                },
                "harmonylang.libraryPath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "scope": "machine-overridable",
                    "default": null,
                    "description": "Path of where Harmony is installed"
                }
            }
        },
        "languages": [
            {
                "id": "harmony",
                "aliases": [
                    "Harmony",
                    "harmony"
                ],
                "extensions": [
                    ".hny"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "harmony",
                "scopeName": "source.harmony",
                "path": "./syntaxes/harmony.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "harmonylang.run",
                "title": "Run Harmony"
            },
            {
                "command": "harmonylang.addLibrary",
                "title": "Add Harmony Library Path"
            },
            {
                "command": "harmonylang.install",
                "title": "Install Harmony"
            },
            {
                "command": "harmonylang-flag.run",
                "title": "Run Harmony with Flags"
            },
            {
                "command": "harmonylang.end",
                "title": "End All Harmony Processes"
            }
        ],
        "keybindings": [
            {
                "command": "harmonylang.run",
                "key": "alt+shift+n"
            },
            {
                "command": "harmonylang.end",
                "key": "alt+shift+q"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm install && npm run compile",
        "build": "vsce package",
        "publish": "vsce publish",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./",
        "clean": "rm -rf out",
        "update-harmony": "./update_harmony.sh",
        "test": "mocha -r ts-node/register tests/**/*.test.ts"
    },
    "devDependencies": {
        "@types/adm-zip": "^0.4.33",
        "@types/argparse": "^2.0.5",
        "@types/chai": "^4.2.14",
        "@types/chmodr": "^1.0.0",
        "@types/command-exists": "^1.2.0",
        "@types/create-html-element": "^2.1.0",
        "@types/glob": "^7.1.3",
        "@types/lodash": "^4.14.168",
        "@types/mocha": "^8.2.0",
        "@types/node": "^12.19.11",
        "@types/rimraf": "^3.0.0",
        "@types/tmp": "^0.2.0",
        "@types/vscode": "^1.34.0",
        "@typescript-eslint/eslint-plugin": "^3.0.2",
        "@typescript-eslint/parser": "^3.0.2",
        "eslint": "^7.24.0",
        "vsce": "^1.96.1"
    },
    "dependencies": {
        "adm-zip": "^0.5.2",
        "argparse": "^2.0.1",
        "axios": "^0.21.1",
        "chai": "^4.2.0",
        "chmodr": "^1.2.0",
        "command-exists": "^1.2.9",
        "create-html-element": "^3.0.0",
        "dotenv": "^8.2.0",
        "file-uri-to-path": "^2.0.0",
        "form-data": "^3.0.0",
        "glob": "^7.1.6",
        "is-online": "^9.0.1",
        "lodash": "^4.17.20",
        "mocha": "^8.2.1",
        "node-html-parser": "^2.1.0",
        "rimraf": "^3.0.2",
        "string-argv": "^0.3.1",
        "tmp": "^0.2.1",
        "typescript": "^4.1.3",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0",
        "vscode-languageserver-textdocument": "^1.0.1"
    }
}
