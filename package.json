{
    "name": "harmonylang",
    "displayName": "HarmonyLang",
    "description": "VS Code language support for Harmony, a Python-like concurrent programming language.",
    "icon": "images/harmonylang.png",
    "version": "0.0.5",
    "publisher": "kevinsun-dev-cornell",
    "repository": "https://github.com/kevinsun-dev/harmonylang",
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "CS 4410",
        "Harmony",
        "Syntax",
        "Language"
    ],
    "author": {
        "email": "contact@kevinsun.dev",
        "name": "Kevin Sun"
    },
    "license": "MIT",
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "harmony",
                "aliases": [
                    "Harmony",
                    "harmony"
                ],
                "extensions": [
                    ".hny"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "harmony",
                "scopeName": "source.harmony",
                "path": "./syntaxes/harmony.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "harmonylang.run",
                "title": "Run Harmony"
            },
            {
                "command": "harmonylang.end",
                "title": "End All Harmony Processes"
            }
        ],
        "keybindings": [
            {
                "command": "harmonylang.run",
                "key": "alt+shift+n"
            },
            {
                "command": "harmonylang.end",
                "key": "alt+shift+q"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./",
        "clean": "rm -rf out"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.34.0",
        "@typescript-eslint/eslint-plugin": "^3.0.2",
        "@typescript-eslint/parser": "^3.0.2",
        "eslint": "^7.1.0",
        "typescript": "^3.9.4"
    }
}
